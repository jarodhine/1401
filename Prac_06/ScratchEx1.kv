<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1


<Button>:
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.20
            Button:
                text: 'Up'
                on_press: app.increment(1)
            Button:
                text: 'Down'
                on_press: app.increment(-1)

    Button:
        text: 'Convert m to km'
        on_press: app.calculate()

    Label:
        id: output
        font_size: 48
        color: (1, 1, 0, 1)
