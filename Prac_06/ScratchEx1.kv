BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.increment(1)
            Button:
                text: 'Down'
                on_press: app.increment(-1)

    Button:
        text: 'Convert m to km'
        on_press: app.calculate()

    Label:
        id: output_label
        font_size: 48
        text: ''
        color: (1, 1, 0, 1)
